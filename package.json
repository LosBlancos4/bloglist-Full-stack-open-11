{
  "name": "blogilista-backend",
  "version": "1.0.0",
  "description": "Full stack Open part 4",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "build:ui": "rm -rf build && cd client && npm install && npm run build --prod && cp -r build ../",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",    
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "lint:client": "cd client && npm run eslint",
    "lint:all": "npm run lint && npm run lint:client",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "start:test": "cross-env NODE_ENV=test node index.js"
  },
  "author": "kmelakar",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "jest": "^27.0.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "http": "*",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.3",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["<rootDir>/client/", "<rootDir>/node_modules/"]
  }
}
